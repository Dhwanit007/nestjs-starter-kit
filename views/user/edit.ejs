        <div class="live-preview">
         <form action="/users/<%- user.id %>?_method=put" method="POST" class="needs-validation" id="edit-user-form" novalidate data-toast-text="Successfully Updated User!">
          <div class="row">
           <div class="">
            <div class="mb-3">
             <label for="nameinput" class="form-label">Name</label>
             <input type="text" class="form-control" name="name" value="<%- old ? old.name : user.name %>"
              placeholder="Enter your name" id="nameinput" required>
             <% if (errors && errors.name) { %>
              <div class="text-danger">
               <%= errors.name[0] %>
              </div>
              <% } %>
            </div>
           </div>
           <!--end col-->
