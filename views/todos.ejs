<%- contentFor('HeaderCss') %>

  <%- contentFor('body') %>

    <div>
      <div class="row mb-3">
        <div class="col-12 d-flex align-items-center justify-content-between">
          <h4 class="fw-bold text-primary mb-0">
            <i class="ri-task-line me-1"></i> Todo List
          </h4>
          <span class="badge bg-info-subtle text-info">
            <%= todos ? todos.length : 0 %> Tasks
          </span>
        </div>
      </div>

      <!-- Todo Card -->
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <!-- Add Task Form -->
          <form action="/todos/add" method="POST" class="row g-2 align-items-center mb-3">
            <div class="col-md-10">
              <input type="text" name="task" class="form-control" placeholder="Enter new task..." required />
            </div>
            <div class="col-md-2 d-grid">
              <button type="submit" class="btn btn-success">
                <i class="ri-add-line me-1"></i> Add
              </button>
            </div>
          </form>

          <!-- Todo List -->
          <% if (todos.length===0) { %>
            <div class="text-center text-muted py-4">
              <i class="ri-emotion-sad-line fs-3 d-block mb-2"></i>
              <p class="mb-0">No tasks found.</p>
            </div>
            <% } else { %>
              <ul class="list-group list-group-flush">
                <% todos.forEach(todo=> { %>
                  <li
                    class="list-group-item d-flex align-items-center justify-content-between border-0 border-bottom py-2">
                    <div class="d-flex align-items-center">
                      <form action="/todos/toggle/<%= todo.id %>" method="POST" style="display:inline">
                        <button type="submit"
                          class="btn btn-sm btn-icon <%= todo.completed ? 'btn-soft-success' : 'btn-soft-secondary' %> me-2">
                          <% if (todo.completed) { %>
                            <i class="ri-checkbox-circle-line"></i>
                            <% } else { %>
                              <i class="ri-checkbox-blank-circle-line"></i>
                              <% } %>
                        </button>
                      </form>

                      <div>
                        <span class="fw-medium <%= todo.completed ? 'text-decoration-line-through text-muted' : '' %>">
                          <%= todo.task %>
                        </span>
                        <div class="small text-muted">
                          <i class="ri-time-line"></i>
                          <%= new Date(todo.date).toLocaleDateString() %>
                        </div>
                      </div>
                    </div>

                    <form action="/todos/delete/<%= todo.id %>" method="POST" style="display:inline">
                      <button type="submit" class="btn btn-sm btn-icon btn-soft-danger" title="Delete">
                        <i class="ri-delete-bin-line"></i>
                      </button>
                    </form>
                  </li>
                  <% }) %>
              </ul>

              <!-- Progress Footer -->
              <% const completed=todos.filter(t=> t.completed).length;
                const percent = Math.round((completed / todos.length) * 100); %>
                <div class="mt-3">
                  <div class="progress" style="height: 6px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: <%= percent %>%"></div>
                  </div>
                  <small class="text-muted d-block text-center mt-1">
                    <%= percent %>% tasks completed
                  </small>
                </div>
                <% } %>
        </div>
      </div>
    </div>

    <%- contentFor('FooterJs') %>